<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EventManager.Views.Modals.TotalScannedData"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:EventManager.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:EventManager.ViewModels.Modals"
    x:Name="ThisPage"
    x:DataType="viewmodel:TotalScannedDataViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Source={x:Reference ThisPage}, Path=BindingContext}"
            Command="{Binding NavigatedToCommand}"
            EventName="NavigatedTo" />
    </ContentPage.Behaviors>

    <Shell.TitleView>
        <Label
            FontAttributes="Bold"
            FontFamily="Roboto"
            FontSize="Large"
            Text="{Binding SelectedBusinessUnit, StringFormat='Scanned Data ({0})'}"
            TextColor="{StaticResource TxtColorWhite}"
            VerticalTextAlignment="Center" />
    </Shell.TitleView>

    <Grid BackgroundColor="{DynamicResource BgColorLightGray}">
        <CollectionView
            ItemsSource="{Binding EmployeeAttendance}"
            RemainingItemsThreshold="1"
            RemainingItemsThresholdReachedCommand="{Binding LoadEmployeeAttendanceStatusCommand}"
            VerticalScrollBarVisibility="Never">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:EmployeeAttendanceStatus">
                    <Border
                        Margin="5"
                        Padding="10"
                        BackgroundColor="{DynamicResource BgColorWhite}"
                        StrokeShape="RoundRectangle 5">
                        <VerticalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontFamily="Roboto"
                                FontSize="Medium"
                                Text="{Binding IdNumber}"
                                TextColor="{DynamicResource TxtColorBlack}" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="Medium"
                                Text="{Binding BusinessUnit}"
                                TextColor="{DynamicResource TxtColorBlack}" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="Small"
                                Text="{Binding Name}"
                                TextColor="{DynamicResource TxtColorBlack}" />

                            <Border
                                Margin="0,10,0,0"
                                HorizontalOptions="Start"
                                Stroke="{StaticResource TransparentColor}"
                                StrokeShape="RoundRectangle 10"
                                WidthRequest="80">

                                <Border.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Status}"
                                        TargetType="Border"
                                        Value="Present">
                                        <Setter Property="BackgroundColor" Value="{StaticResource BgColorGreen}" />
                                    </DataTrigger>

                                    <DataTrigger
                                        Binding="{Binding Status}"
                                        TargetType="Border"
                                        Value="Absent">
                                        <Setter Property="BackgroundColor" Value="{StaticResource BgColorRed}" />
                                    </DataTrigger>
                                </Border.Triggers>

                                <Label
                                    Padding="2.5"
                                    FontAttributes="Bold"
                                    FontFamily="Roboto"
                                    FontSize="Caption"
                                    HorizontalOptions="Center"
                                    Text="{Binding Status}"
                                    TextColor="{DynamicResource PrimaryColorText}" />
                            </Border>

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <AbsoluteLayout>
            <Border
                AbsoluteLayout.LayoutBounds="0.5, 0.95, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="{DynamicResource PrimaryColor}"
                HeightRequest="50"
                IsVisible="{Binding IsLoadingDataIndicator}"
                Stroke="{StaticResource TransparentColor}"
                StrokeShape="Ellipse"
                WidthRequest="50">

                <ActivityIndicator
                    HeightRequest="25"
                    IsRunning="{Binding IsLoadingDataIndicator}"
                    IsVisible="{Binding IsLoadingDataIndicator}"
                    WidthRequest="25"
                    Color="{DynamicResource PrimaryColorText}" />

            </Border>
        </AbsoluteLayout>

        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusyPageIndicator}"
            IsVisible="{Binding IsBusyPageIndicator}"
            VerticalOptions="Center"
            Color="{DynamicResource PrimaryColor}" />

    </Grid>

</ContentPage>