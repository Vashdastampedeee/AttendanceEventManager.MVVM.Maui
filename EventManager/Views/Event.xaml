<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EventManager.Views.Event"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:EventManager.Converters"
    xmlns:viewmodel="clr-namespace:EventManager.ViewModels"
    Title="Event Setter"
    x:DataType="viewmodel:EventViewModel">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverters x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <VerticalStackLayout>
            <Grid Padding="10" ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="0.15*" />
                    <ColumnDefinition Width="0.15*" />
                </Grid.ColumnDefinitions>
                <Border HeightRequest="55" StrokeShape="RoundRectangle 5">
                    <SearchBar
                        Grid.Column="0"
                        FontFamily="Roboto"
                        FontSize="Small"
                        HeightRequest="30"
                        Placeholder="Search"
                        PlaceholderColor="Black" />
                </Border>
                <Button
                    Grid.Column="1"
                    FontFamily="IconButtons"
                    FontSize="Medium"
                    Text="&#xF0B0;" />
                <Button
                    Grid.Column="2"
                    FontFamily="IconButtons"
                    FontSize="Medium"
                    Text="&#xE800;" />
            </Grid>
        </VerticalStackLayout>
        <AbsoluteLayout>
            <Border
                AbsoluteLayout.LayoutBounds="1,1,80,80"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="#512BD4"
                HeightRequest="54"
                Stroke="Transparent"
                StrokeShape="Ellipse"
                WidthRequest="54">

                <Grid>
                    <Button
                        BackgroundColor="Transparent"
                        Command="{Binding AddEventPopupCommand}"
                        FontFamily="IconButtons"
                        FontSize="Title"
                        IsEnabled="{Binding IsNotBusy}"
                        IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        Text="&#xF271;" />

                    <ActivityIndicator
                        HeightRequest="25"
                        IsRunning="{Binding IsBusy}"
                        IsVisible="{Binding IsBusy}"
                        WidthRequest="25"
                        Color="White" />
                </Grid>

            </Border>

        </AbsoluteLayout>
    </Grid>

</ContentPage>