<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EventManager.Views.Logs"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Logs History">
    <VerticalStackLayout>
        <Grid Padding="10" ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.25*" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <SearchBar
                Grid.Column="0"
                FontFamily="Roboto"
                FontSize="Small"
                Placeholder="Search"
                PlaceholderColor="Black" />
            <Button
                Grid.Column="1"
                FontFamily="Roboto"
                FontSize="Small"
                Text="Refresh" />
            <Button
                Grid.Column="2"
                FontFamily="Roboto"
                FontSize="Small"
                Text="Export" />
        </Grid>
    </VerticalStackLayout>

</ContentPage>