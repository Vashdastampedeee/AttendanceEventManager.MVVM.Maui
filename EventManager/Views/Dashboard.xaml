<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EventManager.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:EventManager.ViewModels"
    x:Name="ThisPage"
    Title="Dashboard"
    x:DataType="viewmodel:DashboardViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Source={x:Reference ThisPage}, Path=BindingContext}"
            Command="{Binding NavigatedToCommand}"
            EventName="NavigatedTo" />
    </ContentPage.Behaviors>

    <Grid>

        <Grid
            Padding="5"
            ColumnSpacing="5"
            RowSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Padding="5"
                FontAttributes="Bold"
                FontFamily="Roboto"
                FontSize="Medium"
                Text="{Binding SelectedBusinessUnit, StringFormat='Business Unit: {0}'}" />

            <Border
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <HorizontalStackLayout
                    Padding="20"
                    HorizontalOptions="Start"
                    Spacing="5">
                    <Image
                        HeightRequest="30"
                        Source="employees.png"
                        WidthRequest="30" />

                    <Label
                        FontFamily="Roboto"
                        FontSize="Medium"
                        Text="{Binding TotalEmployees, StringFormat='Employees: {0}'}"
                        VerticalTextAlignment="Center" />
                </HorizontalStackLayout>

            </Border>

            <Border
                Grid.Row="2"
                Grid.Column="0"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <HorizontalStackLayout Padding="20" HorizontalOptions="Start">
                    <Image
                        HeightRequest="25"
                        Source="Present1.png"
                        WidthRequest="25" />
                    <Label
                        FontFamily="Roboto"
                        FontSize="Medium"
                        Text="{Binding PresentEmployees, StringFormat='Present: {0}'}"
                        VerticalTextAlignment="Center" />
                </HorizontalStackLayout>

            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="1"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <HorizontalStackLayout Padding="20" HorizontalOptions="Start">
                    <Image
                        HeightRequest="25"
                        Source="Absent1.png"
                        WidthRequest="25" />
                    <Label
                        FontFamily="Roboto"
                        FontSize="Medium"
                        Text="{Binding AbsentEmployees, StringFormat='Absent: {0}'}"
                        VerticalTextAlignment="Center" />
                </HorizontalStackLayout>

            </Border>
            <Border
                Grid.Row="3"
                Grid.ColumnSpan="2"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">

                <Grid
                    Padding="20"
                    ColumnSpacing="5"
                    RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Image
                        Grid.Column="0"
                        HeightRequest="30"
                        Source="Total1.png"
                        WidthRequest="30" />

                    <Label
                        Grid.Column="1"
                        FontFamily="Roboto"
                        FontSize="Medium"
                        Text="{Binding TotalScannedEmployee, StringFormat='Total Scanned: {0}'}"
                        VerticalTextAlignment="Center" />
                    <Grid
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        ColumnSpacing="10"
                        IsVisible="{Binding IsVisible}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Column="0"
                            BackgroundColor="#512BD4"
                            HeightRequest="50"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10">
                            <Grid>
                                <Button
                                    BackgroundColor="Transparent"
                                    Command="{Binding ViewDataCommand}"
                                    IsEnabled="{Binding IsViewDataNotBusy}"
                                    IsVisible="{Binding IsViewDataBusy, Converter={StaticResource InverseBoolConverter}}"
                                    Text="View Data" />

                                <ActivityIndicator
                                    HeightRequest="25"
                                    IsRunning="{Binding IsViewDataBusy}"
                                    IsVisible="{Binding IsViewDataBusy}"
                                    WidthRequest="25"
                                    Color="White" />
                            </Grid>
                        </Border>

                        <Border
                            Grid.Column="1"
                            BackgroundColor="#512BD4"
                            HeightRequest="50"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 10">
                            <Grid Grid.Column="1">
                                <Button
                                    BackgroundColor="Transparent"
                                    Command="{Binding ExportDataCommand}"
                                    IsEnabled="{Binding IsExportDataNotBusy}"
                                    IsVisible="{Binding IsExportDataBusy, Converter={StaticResource InverseBoolConverter}}"
                                    Text="Export Data" />

                                <ActivityIndicator
                                    HeightRequest="25"
                                    IsRunning="{Binding IsExportDataBusy}"
                                    IsVisible="{Binding IsExportDataBusy}"
                                    WidthRequest="25"
                                    Color="White" />
                            </Grid>
                        </Border>



                    </Grid>
                </Grid>

            </Border>

        </Grid>

        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusyPageIndicator}"
            IsVisible="{Binding IsBusyPageIndicator}"
            VerticalOptions="Center" />

        <AbsoluteLayout>

            <Border
                AbsoluteLayout.LayoutBounds="1,1,80,80"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="#512BD4"
                HeightRequest="55"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 10"
                WidthRequest="55">
                <Grid>
                    <Button
                        BorderColor="Transparent"
                        Command="{Binding FilterDashboardCommand}"
                        FontFamily="IconButtons"
                        FontSize="Large"
                        IsEnabled="{Binding IsNotBusy}"
                        IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        Text="&#xF0B0;" />
                    <ActivityIndicator
                        HeightRequest="25"
                        IsRunning="{Binding IsBusy}"
                        IsVisible="{Binding IsBusy}"
                        WidthRequest="25"
                        Color="White" />
                </Grid>
            </Border>


        </AbsoluteLayout>

    </Grid>




</ContentPage>