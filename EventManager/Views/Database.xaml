<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EventManager.Views.Database"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Database Option">
    <VerticalStackLayout Spacing="10" VerticalOptions="Center">
        <Label
            FontAttributes="Bold"
            FontFamily="Roboto"
            FontSize="Small"
            HorizontalTextAlignment="Center"
            Text="Sync Microsoft SQL Server Database" />
        <Button
            FontAttributes="Bold"
            FontFamily="IconButtons"
            FontSize="Small"
            MaximumWidthRequest="160"
            Text="&#xE800; Sync Database" />

        <Label
            FontAttributes="Bold"
            FontFamily="Roboto"
            FontSize="Small"
            HorizontalTextAlignment="Center"
            Text="Export SQLite Database" />
        <Button
            FontAttributes="Bold"
            FontFamily="IconButtons"
            FontSize="Small"
            MaximumWidthRequest="160"
            Text="&#xE802; Export Database" />
    </VerticalStackLayout>
</ContentPage>