<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EventManager.Views.Database"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:EventManager.ViewModels"
    Title="Database Option"
    x:DataType="viewmodel:DatabaseViewModel">
    <VerticalStackLayout Spacing="10" VerticalOptions="Center">
        <Label
            FontAttributes="Bold"
            FontFamily="Roboto"
            FontSize="Small"
            HorizontalTextAlignment="Center"
            Text="Sync Microsoft SQL Server Database" />
        <Button
            FontAttributes="Bold"
            FontFamily="IconButtons"
            FontSize="Small"
            MaximumWidthRequest="160"
            Text="&#xE800; Sync Database" />

        <Label
            FontAttributes="Bold"
            FontFamily="Roboto"
            FontSize="Small"
            HorizontalTextAlignment="Center"
            Text="Export SQLite Database" />
        <Border
            BackgroundColor="#512BD4"
            HeightRequest="50"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 10"
            WidthRequest="160">

            <Grid>
                <Button
                    BackgroundColor="Transparent"
                    Command="{Binding ExportDatabaseCommand}"
                    FontAttributes="Bold"
                    FontFamily="IconButtons"
                    FontSize="Small"
                    IsEnabled="{Binding IsNotBusy}"
                    IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    MaximumWidthRequest="160"
                    Text="&#xE802; Export Database" />

                <ActivityIndicator
                    HeightRequest="25"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    WidthRequest="25"
                    Color="White" />
            </Grid>

        </Border>
    </VerticalStackLayout>
</ContentPage>